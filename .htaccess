# ملف .htaccess لتحسين SEO وتفعيل URL Rewriting
# مكتبة صحراء النجف

# تفعيل محرك Rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # إعادة توجيه من HTTP إلى HTTPS (مهم جداً للـ SEO)
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # إعادة توجيه من www إلى non-www (أو العكس حسب تفضيلك)
    # احذف التعليق من السطر المناسب:
    
    # من www إلى non-www:
    # RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    # RewriteRule ^(.*)$ https://%1/$1 [R=301,L]
    
    # من non-www إلى www:
    # RewriteCond %{HTTP_HOST} !^www\. [NC]
    # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

    # روابط SEO-Friendly للأحاديث
    # /hadith/12345-slug → hadith.html?id=12345
    RewriteRule ^hadith/([0-9]+)-(.*)$ hadith.html?id=$1 [L,QSA]
    
    # /hadith/12345 → hadith.html?id=12345
    RewriteRule ^hadith/([0-9]+)$ hadith.html?id=$1 [L,QSA]
</IfModule>

# ضغط الملفات (تحسين السرعة)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# تفعيل التخزين المؤقت (Browser Caching)
<IfModule mod_expires.c>
    ExpiresActive On
    
    # الصور
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    
    # CSS و JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    
    # الخطوط
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    
    # HTML
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# منع عرض قائمة الملفات
Options -Indexes

# صفحات الأخطاء المخصصة
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# حماية ملفات النظام
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# السماح بالوصول إلى ملفات معينة
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|webp|svg|woff|woff2|ttf|json|xml|txt)$">
    Order allow,deny
    Allow from all
</FilesMatch>
